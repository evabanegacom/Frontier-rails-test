<p id="notice"><%= notice %></p>

<h1>Player Events</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_events.each do |player_event| %>
      <tr>
        <td><%= player_event.player_id %></td>
        <td><%= player_event.event_id %></td>
        <td><%= link_to 'Show', player_event %></td>
        <td><%= link_to 'Edit', edit_player_event_path(player_event) %></td>
        <td><%= link_to 'Destroy', player_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

