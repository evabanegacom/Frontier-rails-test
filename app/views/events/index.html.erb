<h1>Events</h1>

<%#= select("property", "type_id", @events.collect {|p| [ p.name, p.id] }, {prompt: 'Select date'}) %>
<%= form_tag events_path, :method => 'get' do %>
<%= collection_select :event, :date, Event.all, :date, :name, prompt: true %>
<%= submit_tag "look" %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Course name</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.course_name %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

